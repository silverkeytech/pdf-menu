@page
@model PDFMenu.Pages.Features.Admins.PrivacyModel
@{
}

<body>
  <header>
    <div style="display: flex; align-items: center;">
      <img src="~/Images/logo.png" alt="Logo" width="100" height="60" style="margin-right: 10px;">
      <div class="DineDocs">
        <p>DineDocs</p>
      </div>
    </div>
  </header>
   <div class="separator"></div>
    <div class="separator"></div>
  <div class="container">


          <h2>Privacy</h2>
           <div class="separator"></div>
     <div class="form-row">
        <div class="form-group">
             <form method="post" asp-page-handler="UpdateEmail">
                  <button type="submit">Update Email</button>
             </form>
        </div>

         <div class="form-group">
             <form method="post" asp-page-handler="UpdatePassword">
                  <button type="submit">Update Password</button>
             </form>
          </div>

        </div>

         <div class="separator"></div>

         <div class="form-row">
        <div class="form-group">
             <form method="post" asp-page-handler="AddUsers">
                  <button type="submit">Add Users</button>
             </form>
        </div>

         <div class="form-group">
             <form method="post" asp-page-handler="RemoveUsers">
                  <button type="submit">Remove Users</button>
             </form>
          </div>

        </div>
  </div>
</body>

<style>
  body {
    background-color: #f4f4f8;
  }

  header {
    background-color: #fdbf50;
    color: white;
    padding: 10px;
    display: flex;
    align-items: center;
  }

  .DineDocs {
    white-space: normal;
    text-align: left;
    word-break: break-all;
    font-weight: bold;
    font-size: xx-large;
    margin-top: 10px;
    color: #2a2c41;
  }

  .container {
    background-color: #2a2c41;
    margin: 50px auto 40px;
    width: 50%;
    border-radius: 20px;
    padding: 50px;
  }

  h2 {
    color: #f4f4f8;
  }

  .form-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .form-group {
    width: 48%;
  }



  .separator {
    height: 20px;
  }


  button[type="submit"]
 {
    background-color: #fdbf50;
    border-radius: 20px;
    border: 1px solid #fdbf50;
    padding: 5px;
    margin-bottom: 10px;
    width: 100%;
     color: #fff;
    font-weight: bold;
    cursor: pointer;
    display: block;
  }

  
</style>