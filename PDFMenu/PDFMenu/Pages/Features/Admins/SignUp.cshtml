  background-color: #fdbf50;
  color: white;
  padding: 10px;
  width: 100%;
  height : 4%;
}
.DineDocs {
    white-space: normal;
    text-align: left;
    word-break: break-all;
    font-weight: bold;
    font-size :x-large;
    margin-top:10px;
    color: #2a2c41;
}
.container {
  background-color: #2a2c41;
  margin-top: 50px;
  margin-bottom: 40px;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
   border-radius: 20px;
    padding: 50px;
}
h2
{
    color: #f4f4f8;

}
