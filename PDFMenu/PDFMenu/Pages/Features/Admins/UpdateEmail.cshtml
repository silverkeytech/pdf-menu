@page
@model PDFMenu.Pages.Features.Admins.UpdateEmailModel
@{
}

 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
 <link rel="stylesheet" href="~/css/Admins/AddUsers.css"/>

 <header>
 <img src="~/Images/logo.png" alt="Logo" width="100" height="60" class="float-start">
 <div class="DineDocs">
    <p>DineDocs</p>
  </div>
</header>

<div class="container">
    <h2>Update Email</h2>
   <div class="separator"></div>
<form method="post">
  <div class="form-row">
    <div class="form-group">
      <label for="CurrentEmail">Current Email </label>
      <input type="password" id="CurrentEmail" name="CurrentEmail" required>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label for="Password">Password</label>
      <input type="password" id="Password" name="Password" required>
    </div>
  </div>

   <div class="form-row">
    <div class="form-group">
      <label for="NewEmail">New Email</label>
      <input type="text" id="NewEmail" name="NewEmail" required>
    </div>
  </div>

   <div class="separator"></div>

  <div class="form-row">
    <button type="submit">Update</button>
  </div>
</form>
</div>


